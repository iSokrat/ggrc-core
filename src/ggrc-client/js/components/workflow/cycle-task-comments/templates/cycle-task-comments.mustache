{{#if comments.length}}
  <h6>Task comments ({{comments.length}})</h6>
  <ul class="tree-structure new-tree mapped-objects-tree entry-list">
  {{#each comments}}
    <cycle-task-comments-item
      {instance}="instance"
      {comment}=".">
    </cycle-task-comments-item>
  {{/each}}
  </ul>
{{else}}
  <h6>Task comments</h6>
  No comments.
{{/if}}
