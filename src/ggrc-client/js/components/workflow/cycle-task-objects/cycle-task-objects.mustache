<ul class="tree-structure new-tree mapped-objects-tree">
  {{#mappedObjects}}
    <li class="tree-item task-item">
      <div class="item-main">
        <div class="item-wrap">
          <div class="openclose">
            <span class="status-label status-draft"></span>
            <i class="fa fa-caret-right"></i>
          </div>
          <div class="select">
            <div class="item-data">
              <div class="row-fluid">
                <div class="span8">
                  <div class="tree-title-area">
                    <i class="fa {{iconClass}} color"></i>
                    <a href="{{object.viewLink}}" target="_blank" class="view-link">
                      {{object.title}}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="tier-2-info item-content">
        <div class="tier-2-info-content">
          <lazy-openclose>
            {{#show}}
              <div class="tier-content">
                <div class="row-fluid wrap-row">
                  <div class="span10">
                    <h6>Title</h6>
                    <h3>{{object.title}}</h3>
                  </div>
                </div>

                <div class="row-fluid wrap-row">
                  <div class="span12">
                    <h6>Description</h6>
                    <div class="rtf-block">
                      <read-more {text}="object.description"></read-more>
                    </div>
                  </div>
                </div>

                <div class="row-fluid wrap-row">
                  <div class="span12">
                    <h6>Notes</h6>
                    <div class="rtf-block">
                      <read-more {text}="object.notes"></read-more>
                    </div>
                  </div>
                </div>
              </div>
            {{/show}}
          </lazy-openclose>
        </div>
      </div>
    </li>
  {{/mappedObjects}}
</ul>
